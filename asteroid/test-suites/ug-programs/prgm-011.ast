    load system io.

    -- build a list of odd values
    let a = [1 to 10 step 2].  -- list comprehension
    io @println ("list: " + a).

    -- reverse the list using a slice computed as comprehension
    let slice = [4 to 0 step -1]. -- list comprehension
    let b = a @slice.
    io @println ("reversed list: " + b).
