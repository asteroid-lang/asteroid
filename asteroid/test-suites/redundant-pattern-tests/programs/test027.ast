-- implements Peano addition on terms
load "io".
load "util".

structure S with
    data x.
    end 
    
structure add with
    data left.
    data right.
    end

function reduce
    with add(x,y) do              -- Will subsume all matches for add(x,S(y))
        return 1.
    with add(x,0) do      
        return reduce(x).
    with add(x,S(y)) do         -- The redundant pattern
        return S(reduce(add(x,y))).
    with term do     
        return term.
    end 
    
try    
    println(reduce(add(add(add(S(S(0)),S(S(S(0)))),S(0)),S(0)))).
catch Exception("RedundantPatternFound",s) do
    println("PASS.").
catch e do
    println("FAIL.").
    throw Error("FAIL: unexpected error "+e).
end.
