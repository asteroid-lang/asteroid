
-- Factorial

load system io.
load "util".

function fact 
    with 0 do
        return 1
    with (n:%integer) if n > 0 do
        return n * fact (n-1).
    with (n:%integer) if n < 0 do
        throw Error("factorial is not defined for "+n).
    end 

io @println ("The factorial of 3 is: " + fact (3)).
assert (fact(3) == 6).

