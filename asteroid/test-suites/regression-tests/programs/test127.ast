" 
from asteroid.interp import interp
from asteroid.state import state

program = ''
program += 'let x = 1.\n'
program += 'let y = 0.\n'
program += '\n'
program += 'if ( x < 0) do\n'
program += '    ...\n'
program += 'elif ( x / y < 1 ) do-- division by zero \n'
program += '    ...\n'
program += 'end\n'

try:
    interp(program,exceptions=True)
except:
    pass

assert( state.lineinfo[1] == 6)

