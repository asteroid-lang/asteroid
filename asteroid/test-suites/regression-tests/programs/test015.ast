try
    let myList = [ (1,1) , (2,2) , (3,3) ].
    let counter = 0.

    for (x,x) in myList do
        let counter = counter + 1.
    end.

    assert(counter == 0).

    for (x,y) in myList do
        let counter = counter + 1.
    end.

    assert(counter == 3).

    println("FAILED.").
    throw Error("FAIL: no error").
catch Exception("NonLinearPatternError", s) do
    println("PASSED.").
catch _ do
    println("FAILED.").
    throw Error("FAIL: unexpected error").
end.
