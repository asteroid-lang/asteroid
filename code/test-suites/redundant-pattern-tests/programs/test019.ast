
--------------------------------------
-- patterns_test18.ast
-- a simple program to test for
-- subsumption detection in Asteroid.
--------------------------------------
--------------------------------------
load "io".
load "util".

-- A testing function with multiple patterns
function testFunction
    with ( fname, lname) do  -- *** will SUBSUME (x, y) ***
        return 1.
    orwith person2:( fname, lname1, lname2) do
        return 2.
    orwith coord:( x, y ) do 
        return 3. 
    orwith () do
        return 4.
    end.
    
try
    -- Evaluate the function with a test input.
    let x = testFunction( 3 , 4 ).

    -- If the function test worked, print the output we got.
    println( "The value returned is: " + x ).
catch ("Exception", s) do
    if not isnone(s @index("Redundant")) do
        exit "Got expected redundant pattern error.".
    else
        throw Error("unexpected error: "+s).
    end.
end.